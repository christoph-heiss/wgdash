{
  "extends": "stylelint-config-standard-scss",
  "rules": {
    "declaration-empty-line-before": "never",
    "indentation": 4,
    "scss/dollar-variable-colon-space-before": null,
    "selector-class-pattern": "[a-z][a-zA-Z0-9]+",
    "string-quotes": "single",
    "scss/at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen"
        ]
      }
    ]
  }
}
